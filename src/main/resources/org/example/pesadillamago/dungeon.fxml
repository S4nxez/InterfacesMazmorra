<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.pesadillamago.ui.GameController"
            fx:id="rootPane"
            prefHeight="400.0" prefWidth="600.0">
    <ImageView fx:id="gameImageView" layoutX="100.0" layoutY="100.0" fitWidth="400.0" fitHeight="200.0"/>
    <Button fx:id="upButton" layoutX="275.0" layoutY="50.0" mnemonicParsing="false" onAction="#handleDirection" text="Up" />
    <Button fx:id="rightButton" layoutX="500.0" layoutY="200.0" mnemonicParsing="false" onAction="#handleDirection" text="Right" />
    <Button fx:id="downButton" layoutX="275.0" layoutY="350.0" mnemonicParsing="false" onAction="#handleDirection" text="Down" />
    <Button fx:id="leftButton" layoutX="50.0" layoutY="200.0" mnemonicParsing="false" onAction="#handleDirection" text="Left" />
</AnchorPane>