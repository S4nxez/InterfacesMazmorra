<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<AnchorPane stylesheets="@./styles.css" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.pesadillamago.game.dungeon.home.HomeLibraryController">
    <ImageView fitHeight="400.0" fitWidth="600.0" preserveRatio="true">
        <Image url="@images/casaBiblioteca.jpg" />
    </ImageView>
    <VBox alignment="CENTER" spacing="10.0">
        <Button onAction="#handleManageSpells" text="Manage Spells" />
        <Button onAction="#handleManageStorage" text="Manage Storage" />
    </VBox>
    <AnchorPane>
        <VBox alignment="CENTER" spacing="10.0">
            <Button onAction="#handleImproveSpell" text="Improve a Known Spell" />
            <Button onAction="#handleLearnNewSpell" text="Learn New Spell" />
            <Button onAction="#handleExit" text="Exit" />
        </VBox>
    </AnchorPane>
    <AnchorPane>
        <VBox alignment="CENTER" spacing="10.0">
            <Button onAction="#handleDeleteFromStorage" text="Delete from Storage" />
            <Button onAction="#handleDeleteFromJewelryBag" text="Delete from Jewelry Bag" />
            <Button onAction="#handleTakeFromStorage" text="Take from Storage" />
            <Button onAction="#handleTakeFromJewelryBag" text="Take from Jewelry Bag" />
            <Button onAction="#handleLeaveInChest" text="Leave in the Chest" />
            <Button onAction="#handleLeaveInJewelryBag" text="Leave in the Jewelry Bag" />
            <Button onAction="#handleExchangeWizardChest" text="Exchange between Wizard and Chest" />
            <Button onAction="#handleExchangeWizardJewelryBag" text="Exchange between Wizard and Jewelry Bag" />
            <Button onAction="#handleExit" text="Exit" />
        </VBox>
    </AnchorPane>
</AnchorPane>
