<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.pesadillamago.game.dungeon.home.HomeController">
    <ImageView fx:id="imageView" fitHeight="400.0" fitWidth="600.0" preserveRatio="true">
        <Image url="@images/casaMagoMain.png" />
    </ImageView>
    <VBox alignment="CENTER" spacing="10.0">
        <Button onAction="#handleGoToDungeon" text="Go to Dungeon" />
        <Button onAction="#handleSleep" text="Sleep (recover energy)" />
        <Button onAction="#handleRecoverLife" text="Recover life points" />
        <Button onAction="#handleExitGame" text="Exit Game" />
        <Button onAction="#handleManageSinga" text="Manage Singa" />
        <Button onAction="#handleGoToLibrary" text="Go to Library" />
    </VBox>
</AnchorPane>
